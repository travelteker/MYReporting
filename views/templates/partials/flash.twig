{% if flash.getMessage('info') %}
    <div class="container">
        <div class="row">
            <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <p class="infoAlert"><i class="fas fa-info-circle"></i> {{ flash.getMessage('info') | first }}</p>
            </div>
        </div>
    </div>
{% endif %}

{% if flash.getMessage('error') %}
    <div class="container">
        <div class="row">
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <p class="dangerAlert"><i class="fas fa-exclamation-triangle"></i> {{ flash.getMessage('error') | first }}</p>
            </div>
        </div>
    </div>
{% endif %}



